{% comment %} Reusable Snippet for lazyloaded + srcset images {% endcomment %}
<picture>
  <source media="(max-width: 375px)"
          srcset="{{ imgSrc.src | img_url: '575x' }}">
  <source media="(max-width: 768px)"
          srcset="{{ imgSrc.src | img_url: '768x' }}">
  <img src="{{ imgSrc.src | img_url: '1200x' }}"
       srcset="{{ imgSrc.src | img_url: '1200x' }}"
       alt="{{imgSrc.alt | escape}}" loading="lazy"
       class="lazy lazy-reveal lazy-image-wrapper">
</picture>