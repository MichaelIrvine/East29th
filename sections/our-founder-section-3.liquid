{% comment %} Our Founder Page - Section 3 {% endcomment %}
<section class="image-is-left-aligned">
  <div class="our-founder_section__col-01">
    <div class="col-01--inner-wrapper lazy-image-wrapper">
      {% render 'responsive-image' with imgSrc: section.settings.our-founder-qa-section-3-image %}
    </div>
  </div>
  <div class="our-founder_section__col-02">
    <div class="col-02--inner-wrapper">
      <div class="our-founder_q-a--wrapper">
        {% for block in section.blocks %}
          <button class="toggle-answer accordion__button">
            <h3>{{block.settings.question}}</h3>
          </button>
          
          <div class="answer accordion__content">
            <p>{{block.settings.answer}}</p>
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
  
</section>

{% schema %}
  {
    "name": "Our Founder section 3",
    "settings": [
      {
        "id": "our-founder-qa-section-3-image",
        "type": "image_picker",
        "label": "Our Founder Q/A Section 3 Image"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Questions & Answers",
        "settings": [
          {
            "id": "question",
            "type": "text",
            "label": "Enter Question"
          },
          {
            "id": "answer",
            "type": "textarea",
            "label": "Enter Answer"
          }
        ]
      }
    ]
  }
{% endschema %}