

<div id="hero-homepage" class="hero-homepage">
  <div class="hero-homepage__col-01">
    {% render 'responsive-image' with imgSrc: section.settings.hero-homepage-image %}
            {% comment %} {% assign image = section.settings.hero-homepage-image %}
          <img 
              class="lazy lazy-reveal lazy-image-wrapper"
              data-srcset="
              {% if image.width > 420 %}{{ image.src | img_url: '420x' }} 420w{% endif %}
              {% if image.width > 720 %},{{ image.src | img_url: '720x' }} 720w{% endif %}
              {% if image.width > 900 %},{{ image.src | img_url: '1080x' }} 900w{% endif %} 
              " 
          /> {% endcomment %}
    <div class="arrow-down">
      <svg xmlns="http://www.w3.org/2000/svg" width="24.413" height="98.707">
        <g
          data-name="ARROW DOWN"
          fill="none"
          stroke="#fff"
          stroke-linecap="square"
          stroke-miterlimit="10"
        >
          <path data-name="Line 7" d="M12.207 1.3v96.04" />
          <g data-name="Group 49">
            <path data-name="Line 8" d="M12.207 98L.707 85.65" />
            <path data-name="Line 9" d="M12.207 98l11.5-12.35" />
          </g>
        </g>
      </svg>
    </div>
  </div>
  <div class="hero-homepage__col-02">
    <div class="hero__col-02--inner-wrapper will-fade-up-in delay-2">
      <h1>{{section.settings.hero-homepage-heading}}</h1>
      <a href="/products/vital-serum" class="button-main">Discover</a>
    </div>
  </div>
</div>

{% schema %} 
  {
    "name": "Homepage Hero",
    "settings": [
      {
        "id": "hero-homepage-image",
        "type": "image_picker",
        "label": "Homepage Hero Image"
      }, 
      {
        "id": "hero-homepage-heading",
        "type": "textarea",
        "label": "Homepage Heading"
      }
    ]
  }
{% endschema %}


