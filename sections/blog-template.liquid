{% paginate blog.articles by 12 %}

<div class="blog-template">
  <header class="blog-header">
    <h1>{{blog.title}}</h1>
  </header>

  <div class="blog--inner-wrapper">
    {% if current_tags %} {% render 'blog-filter'%} {% else %} {% render
    'latest-post' %} {% render 'blog-filter'%} {% endif %}
    <div class="article-list--wrapper">
      <div class="article-list">
        {% render 'article-list' %}
      </div>
    </div>
  </div>
</div>

{% if paginate.pages > 1 %} 
  {% include 'pagination' %} 
{% endif %} 
{% endpaginate %}
