  {% comment %} Row 3 {% endcomment %}
  <div class="clean-vegan--row-3">
    <div class="row-3--wrapper">
    {% comment %} Blocks here {% endcomment %}
    {% for block in section.blocks %}
      <div class="clean-vegan-block">
        {% comment %} icon {% endcomment %}
        <div class="clean-vegan-block-icon">
          <img 
          src="{{block.settings.clean-vegan-icon | img_url: 'master'}}" 
          alt="{{clean-vegan-icon.alt | escape}}">
        </div>
        {% comment %} title {% endcomment %}
        <div class="clean-vegan-block-title">
          <h3>{{block.settings.clean-vegan-title}}</h3>
        </div>
        {% comment %} para {% endcomment %}
        <div class="clean-vegan-block-paragraph">
          <p>{{block.settings.clean-vegan-paragraph}}</p>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Clean Beauty Vegan",
    "settings": [
      {
        "id": "clean-beauty-vegan-image",
        "type": "image_picker",
        "label": "Clean Beauty Vegan Image"
      },
      {
        "id": "clean-beauty-vegan-title",
        "type": "text",
        "label": "Clean Beauty Vegan Section Title"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Vegan Section Blocks",
        "limit": 3,
        "settings": [
          {
            "id": "clean-vegan-icon",
            "type": "image_picker",
            "label": "Add an icon for block"
          },
          {
            "id": "clean-vegan-title",
            "type": "text",
            "label": "Enter title for block"
          },
          {
            "id": "clean-vegan-paragraph",
            "type": "richtext",
            "label": "Enter some text for this block"
          }
        ]
      }
    ]
  }
{% endschema %}


