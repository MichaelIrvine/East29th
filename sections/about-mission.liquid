<div id="mission-values" class="anchor"></div>
<div class="mission--wrapper">
  <div class="mission--row-01">
    <div class="mission__row-01__col-01">
      <h2>{{ section.settings.mission-title }}</h2>
    </div>
    <div class="mission__row-01__col-02">
      <div class="mission__row-01__col-02--inner-wrapper">
        <h3>{{ section.settings.mission-text-para1 }}</h3>
        <h3>{{ section.settings.mission-text-para2 }}</h3>
      </div>
    </div>
  </div>
  <div class="mission--row-02">
    <img 
    class="lazy lazy-reveal"
    data-srcset="
    {% if section.settings.mission-image.width > 420 %}{{ section.settings.mission-image.src | img_url: '420x' }} 420w{% endif %}
    {% if section.settings.mission-image.width > 720 %},{{ section.settings.mission-image.src | img_url: '720x' }} 720w{% endif %}
    {% if section.settings.mission-image.width > 900 %},{{ section.settings.mission-image.src | img_url: '1080x' }} 900w{% endif %} 
    " 
    alt="{{section.settings.mission-image.alt | escape}}">
  </div>
  <div class="mission--row-03">
    <h3>{{section.settings.values-text}}</h3>
  </div>
</div>




{% schema %} 
  {
    "name": "Mission and Values",
    "settings": [
      {
        "id": "mission-title",
        "type": "textarea",
        "label": "Missions & Values Title"
      },
      {
        "id": "mission-text-para1",
        "type": "textarea",
        "label": "Missions & Values Text First Paragraph"
      },
      {
        "id": "mission-text-para2",
        "type": "textarea",
        "label": "Missions & Values Text Second Paragraph"
      },
      {
        "id": "mission-image",
        "type": "image_picker",
        "label": "Mission Image"
      },
      {
        "id": "values-text",
        "type": "textarea",
        "label": "Values Paragraph"
      }
    ]
  }
{% endschema %}