{% comment %} Clean Beauty Page - Section Green Beauty {% endcomment %}
<section id="green-beauty" class="clean-green-beauty image-is-right-aligned">
  {% comment %} Column 1 with Q/A {% endcomment %}
  <div class="green-beauty_section__col-01">
    <div class="col-01--inner-wrapper">
      <h2>{{section.settings.green-beauty-title}}</h2>
      <div class="green-beauty_q-a--wrapper">
        {% for block in section.blocks %}
          <button class="toggle-answer accordion__button">
            <h3>{{block.settings.question}}</h3>
          </button>
          
          <div class="answer accordion__content">
            <p>{{block.settings.answer}}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% comment %} Colum 2 with Image {% endcomment %}
  <div class="green-beauty_section__col-02">
    <div class="col-02--inner-wrapper lazy-image-wrapper">
      {% comment %} <img 
      data-aspect="portrait"
      data-src="{{section.settings.green-beauty-image | img_url: 'master'}}" 
      class="lazy lazy-reveal"
      alt="{{section.settings.green-beauty-image.alt | escape }}"> {% endcomment %}
    {% render 'responsive-image' with imgSrc: section.settings.green-beauty-image %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Green Beauty Section",
    "settings": [
      {
        "id": "green-beauty-image",
        "type": "image_picker",
        "label": "Green Beauty Image"
      },
      {
        "id": "green-beauty-title",
        "type": "text",
        "label": "Green Beauty Title"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Questions & Answers",
        "settings": [
          {
            "id": "question",
            "type": "text",
            "label": "Enter Question"
          },
          {
            "id": "answer",
            "type": "textarea",
            "label": "Enter Answer"
          }
        ]
      }
    ]
  }
{% endschema %}